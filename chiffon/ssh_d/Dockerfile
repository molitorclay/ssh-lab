# ssh_d Dockerfile

# self ssh
COPY --chown=$USER:$USER $SELF/ssh/id_ed25519.pub /home/$USER/.ssh/authorized_keys
RUN chmod 600         /home/$USER/.ssh/authorized_keys


# Grab port generated by build.sh and add to sshd_config
COPY $SELF/port ./port
RUN echo 'Port ' > ./label
RUN cat label port >> /etc/ssh/sshd_config
RUN rm ./port ./label


